
@import url(http://weloveiconfonts.com/api/?family=entypo)

@import utils

fondo = #ededed
negro = #424242

[class*="entypo-"]:before 
	font-family: 'entypo', sans-serif;


degradado_footer()	
	background: fondo;
	background: -moz-linear-gradient(top, fondo 0%, fondo 14%, rgba(246,246,246,1) 40%, rgba(255,255,255,1) 88%, rgba(255,255,255,1) 100%);
	background: -webkit-gradient(left top, left bottom, color-stop(0%, fondo), color-stop(14%, fondo), color-stop(40%, rgba(246,246,246,1)), color-stop(88%, rgba(255,255,255,1)), color-stop(100%, rgba(255,255,255,1)));
	background: -webkit-linear-gradient(top, fondo 0%, fondo 14%, rgba(246,246,246,1) 40%, rgba(255,255,255,1) 88%, rgba(255,255,255,1) 100%);
	background: -o-linear-gradient(top, fondo 0%, fondo 14%, rgba(246,246,246,1) 40%, rgba(255,255,255,1) 88%, rgba(255,255,255,1) 100%);
	background: -ms-linear-gradient(top, fondo 0%, fondo 14%, rgba(246,246,246,1) 40%, rgba(255,255,255,1) 88%, rgba(255,255,255,1) 100%);
	background: linear-gradient(to bottom, fondo 0%, fondo 14%, rgba(246,246,246,1) 40%, rgba(255,255,255,1) 88%, rgba(255,255,255,1) 100%);

bordes_redondeados_superiores(radio)
	-webkit-border-top-right-radius: radio
	-webkit-border-top-left-radius: radio
	-moz-border-radius-topright: radio
	-moz-border-radius-topleft: radio

bordes_redondeados_inferiores(radio)
	-webkit-border-bottom-right-radius: radio
	-webkit-border-bottom-left-radius: radio
	-moz-border-radius-bottomright: radio
	-moz-border-radius-bottomleft: radio


*
	margin 0px
	padding 0px

body#tg-lp
	background-color rgba(237,237,237,1)

header.row
	margin-top 1%
	p
		margin-top 2%

section#presentacion 

	background-color #ededed

	background: rgba(199,199,199,1);
	background: -moz-linear-gradient(top, rgba(237,237,237,1) 0%, rgba(255,255,255,1) 21%, rgba(255,255,255,1) 78%, rgba(237,237,237,1) 100%);
	background: -webkit-gradient(left top, left bottom, color-stop(0%, rgba(237,237,237,1)), color-stop(21%, rgba(255,255,255,1)), color-stop(78%, rgba(255,255,255,1)), color-stop(100%, rgba(237,237,237,1)));
	background: -webkit-linear-gradient(top, rgba(237,237,237,1) 0%, rgba(255,255,255,1) 21%, rgba(255,255,255,1) 78%, rgba(237,237,237,1) 100%);
	background: -o-linear-gradient(top, rgba(237,237,237,1) 0%, rgba(255,255,255,1) 21%, rgba(255,255,255,1) 78%, rgba(237,237,237,1) 100%);
	background: -ms-linear-gradient(top, rgba(237,237,237,1) 0%, rgba(255,255,255,1) 21%, rgba(255,255,255,1) 78%, rgba(237,237,237,1) 100%);
	background: linear-gradient(to bottom, rgba(237,237,237,1) 0%, rgba(255,255,255,1) 21%, rgba(255,255,255,1) 78%, rgba(237,237,237,1) 100%);

	padding-top 2%
	margin-top 0px

	p
		text-align center	
		font-size 1.1em	
		
	img
		margin 3% auto

	.regla-tres
		margin-top 8%
		font-size 1.2em
		color negro


section
	.tarjeta
		background-color white
		padding-left 2%
		padding-right 2%
		width 98%		
		margin-top 2%
		padding-bottom 3%		
		bordes_redondeados(3px 3px 3px 3px)
		sombra_caja( 1px 1px 5px 0px rgba(0,0,0,0.13))


		.franja
			padding 0%
			padding-bottom 0.3em
			border 0
			width 0%
			background-color green



		p
			font-family robotolight
			font-size 1.1em

		.titulo
			border-bottom solid 1px #b8b4b8
			width 98%
			margin-bottom 2%
			
			h2
				margin-bottom 0%
				color negro
				font-family robotocondensed				

			.icono

				color white
				background-color orange
				border 0

				@media screen and (min-width: 768px)					
					padding 10% 18%
					padding-top 0%
					width 20%										
					font-size 2rem
					bordes_redondeados_inferiores(2px)
					sombra_caja( 1px 1px 2px 0px rgba(0,0,0,0.4))

				@media screen and (max-width: 768px)														
					font-size 1.9rem
					padding 0.3rem 0.8rem
					position relative
					top 1px
					bordes_redondeados_superiores(2px)
					sombra_caja( 0px -1px 5px -1px rgba(0,0,0,0.7))
				

			.icono-small
				
				@media screen and (min-width: 768px)
					display none
								
				color white
				background-color orange
				border 0
				font-size 1.9rem
				padding 0.3rem 0.8rem
				position relative
				top 1px
				bordes_redondeados_superiores(2px)
				sombra_caja( 0px -1px 5px -1px rgba(0,0,0,0.7))

	&#que-es img
		width 8em




footer
	.footer
		degradado_footer()
		
		padding 5%
		padding-bottom 1%

		h3
			font-family robotocondensed
			font-size 1rem
			text-align center
			color negro

	#final
		background-color white
		text-align center
		padding 3%
		padding-bottom 4%
		font-family robotolight
		color #797979




